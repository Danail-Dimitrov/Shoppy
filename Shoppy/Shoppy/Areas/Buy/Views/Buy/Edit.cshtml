@model Shoppy.Areas.Buy.Models.DTO.EditBuyOfferDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit your BuyOffer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MoneyOffered" class="control-label"></label>
                <input asp-for="MoneyOffered" class="form-control" />
                <span asp-validation-for="MoneyOffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to your BuyOffers</a>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
