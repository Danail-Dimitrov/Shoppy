@model GetSellOfferByNameDTO

@{
    ViewData["Title"] = "GetSellOffersByName";
}

<h1>Get SellOffers by name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetSellOffersByName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.ProductTitle" class="control-label"></label>
                <input asp-for="ProductTitle" class="form-control" />
                <span asp-validation-for="ProductTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to your Buy Offers</a>
    <br />
    <a asp-action="ShowRandomOffers">Show random SellOffers</a>
</div>

