@model CreateBuyOfferDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Buy Offer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.AskedMoney" class="control-label"></label>
                <input asp-for="AskedMoney" class="form-control" disabled />
                <span asp-validation-for="AskedMoney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MoneyOffered" class="control-label"></label>
                <input asp-for="MoneyOffered" class="form-control" />
                <span asp-validation-for="MoneyOffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowRandomOffers" asp-controller="Buy">Back to Sell Offers</a>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
